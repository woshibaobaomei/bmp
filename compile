 src/bmp_command.c   \
 src/bmp_control.c   \
 src/bmp_timer.c     \
 src/bmp_util.c      \
 src/bmp_main.c      \
-Iinclude            \
 lib/avl/src/*.c     \
-Ilib/avl/include/

